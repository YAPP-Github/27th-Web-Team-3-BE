# Database
DATABASE_URL=mysql://localhost:3306/retrospect
DATABASE_USERNAME=root
DATABASE_PASSWORD=
DB_SCHEMA_UPDATE=false

# Server
SERVER_PORT=8080

# Logging
# Development (상세 디버그 로그 포함)
RUST_LOG=info,server=debug
# Production (권장 - info 레벨만)
# RUST_LOG=info

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1800
REFRESH_TOKEN_EXPIRATION=1209600
SIGNUP_TOKEN_EXPIRATION=600

# Social Login
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_REDIRECT_URI=http://localhost:3000
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_REDIRECT_URI=http://localhost:8080/auth/kakao/callback

# AI Service
OPENAI_API_KEY=your_openai_api_key_here

# PDF Generation
PDF_FONT_DIR=./fonts
PDF_FONT_FAMILY=NanumGothic

# AI Monitoring (OpenAI)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here     # 에러 알림 발송용 Discord Webhook
GITHUB_TOKEN=your_github_token_here                   # Issue/PR 자동 생성용 GitHub PAT

# AI Diagnostic Agent (OpenAI 사용)
DIAGNOSTIC_MODEL=gpt-4o-mini                          # 기본값 (~$0.15/1M tokens), gpt-4o 사용 시 정확도↑ 비용↑ (~$5/1M tokens)

# Obsidian MCP (Optional - for docs visualization)
OBSIDIAN_API_KEY=your_obsidian_local_rest_api_key_here  # 문서 시각화용 (선택사항)

E2E_TEST_EMAIL="testemail"