{
  "env": {
    "RUST_LOG": "info",
    "RUST_BACKTRACE": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cargo build:*)",
      "Bash(cargo test:*)",
      "Bash(cargo run:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo check:*)",
      "Bash(cargo audit:*)",
      "Bash(cargo doc:*)",
      "Bash(rustup:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)",
      "Bash(git fetch:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(curl:*)",
      "Bash(jq:*)"
    ],
    "deny": [
      "Read(rust/.env)",
      "Read(.env)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(echo $CLAUDE_TOOL_INPUT | jq -r '.file_path // empty'); if [[ \"$file_path\" == *.rs ]]; then cd rust && cargo fmt --quiet 2>/dev/null; fi"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -d rust ]; then cd rust && cargo check --quiet 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  }
}
